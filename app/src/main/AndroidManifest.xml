<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.shihab.kotlintoday">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".feature.MaterialDialogActivity"
            android:label="@string/title_activity_material_dialog"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name=".feature.ClassActivity"
            android:label="@string/title_activity_class"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.coroutine.CoroutineActivity"
            android:label="@string/title_activity_coroutine"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.LogInActivityMVVM"
            android:label="@string/title_activity_log_in_mvvm"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.ImplicitIntentActivity"
            android:label="@string/title_activity_implicit_intent"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.RecyclerViewWithRetrofitRx"
            android:label="@string/title_activity_recycler_view_with_retrofit_rx"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.LoopActivity"
            android:label="@string/title_activity_loop"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.FirstActivity"
            android:label="@string/title_activity_first"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.NextActivity"
            android:label="@string/title_activity_next"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.ConditionActivity"
            android:label="@string/title_activity_condition"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.ConditionalActivity"
            android:label="@string/title_activity_conditional"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.DataTypeWithCalculatorActivity"
            android:label="@string/title_activity_data_type"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".feature.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>